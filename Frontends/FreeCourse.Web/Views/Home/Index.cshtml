@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

@model List<CourseViewModel>

<h1>Kurslar</h1>
<hr />
@if(Model.Any())
{
    @foreach (var item in Model)
    {
        count++;

       if(count==1 || count%3==1)
       {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-4'>")
       }

        <div class="col">
            <div class="card">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="" height="272">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary">Kategori: @item.Category.Name</div>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price TL</h4>
                    <div>
                        <a class="btn btn-success" asp-route-id="@item.Id" asp-controller="Home" asp-action="Detail">Detay</a>
                    </div>
                </div>
            </div>
        </div>

        if(count%3==0)
       {
           @Html.Raw("</div>")
       }
       
    }
}
